<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_x="3dp"
        android:layout_y="6dp"
        android:src="@drawable/logotess"
        android:contentDescription="@string/logo_desc" />

    <TextView
        android:id="@+id/Lbempresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_x="90dp"
        android:layout_y="12dp"
        android:text="@string/empresa_nombre" />

    <TextView
        android:id="@+id/LbTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="46dp"
        android:scrollHorizontally="false"
        android:text="@string/titulo_actividad"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="100dp"
        android:text="@string/instrucciones" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="262dp"
        android:text="@string/angulo_inf_label" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="204dp"
        android:text="@string/angulo_sup_label" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="146dp"
        android:text="@string/longitud_vano_label" />

    <TextView
        android:id="@+id/unidadesDistancias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="293dp"
        android:layout_y="149dp"
        android:text="m"   />

    <TextView
        android:id="@+id/txtError1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="320dp"
        android:layout_y="149dp"
        android:text="*"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/unidadesAngulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="293dp"
        android:layout_y="207dp"
        android:text="ยบ"   />

    <TextView
        android:id="@+id/txtError2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="320dp"
        android:layout_y="207dp"
        android:text="*"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/unidadesAngulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="293dp"
        android:layout_y="265dp"
        android:text="ยบ"   />

    <TextView
        android:id="@+id/txtError3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="320dp"
        android:layout_y="265dp"
        android:text="*"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/txtAngSup"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_x="203dp"
        android:layout_y="198dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:hint="@string/angulo_sup_hint" />

    <EditText
        android:id="@+id/txtLongVano"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_x="203dp"
        android:layout_y="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:hint="@string/longitud_vano_hint" />

    <EditText
        android:id="@+id/txtAngInf"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_x="203dp"
        android:layout_y="256dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:hint="@string/angulo_inf_hint">
        <requestFocus />
    </EditText>



    <Button
        android:id="@+id/cmdComprobar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="110dp"
        android:layout_y="319dp"
        android:text="@string/btn_comprobar" />

    <TextView
        android:id="@+id/txtAlturaMedida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="389dp"
        android:text="@string/altura_medida_placeholder" />

    <TextView
        android:id="@+id/txtMensajeError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="252dp"
        android:layout_y="389dp"
        android:text="@string/error_falta"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cmdVolver"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="248dp"
        android:layout_y="450dp"
        android:text="@string/btn_volver" />

    <Button
        android:id="@+id/cmdVaciar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_x="258dp"
        android:layout_y="96dp"
        android:text="@string/btn_vaciar"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/cmdAyuda"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_x="42dp"
        android:layout_y="42dp"
        android:src="@drawable/interrogacion"
        android:contentDescription="@string/ayuda_desc" />

    <TextView
        android:id="@+id/tvSelectedUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_units"
        android:layout_x="50dp"
        android:layout_y="450dp"/>

</AbsoluteLayout>